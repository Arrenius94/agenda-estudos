{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/input/index.jsx",
    "src/app/agenda/page.jsx",
    "src/app/criar-estudo/page.jsx",
    "src/app/page.jsx",
    "src/app/layout.jsx",
    "src/app/pagina-inicial/page.jsx",
    "src/components/header/index.jsx"
  ],
  "exclude": ["node_modules"]
}
